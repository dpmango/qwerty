// HEADER :: START
header.header
  .container
    .header__wrapper
      a(href="homepage.html").header__logo
        +svgMono('logo')

      .header__phone
        a(href="#")
          +svgMono('phone')

      .header__right
        .header__hamburger
          .hamburger.hamburger--squeeze(js-hamburger)
            .hamburger-box
              .hamburger-inner
        .header__languages-block
          a.header__language.is-active(href="#" js-choose-language) EN
          a.header__language(href="#" js-choose-language) GE
          a.header__language(href="#" js-choose-language) RU
    
// MOBILE NAVI
.mobile-navi
  .section__bg(style="background-image: url(img/mobile-menu.png)")
    //- img(src='img/mobile-menu.png')
  .mobile-navi__wrapper
    .mobile-navi__title
      p menu
    ul.mobile-navi__menu
      li
        a(href="portfolio.html") PORTFOLIO
      li
        a(href="service.html") SERVICE
      li
        a(href="about.html") ABOUT
      li
        a(href="contacts.html") CONTACTS
      li
        a(href="vacancies.html") VACANCIES
      li
        a(href="blog.html") BLOG

    .mobile-navi__socials
      a.mobile-navi__icon.mobile-navi__icon--dribble(href="https://dribbble.com/Qwerty-co" target="_blank")
        +svgMono('dribble')
      a.mobile-navi__icon.mobile-navi__icon--behance(href="http://www.behance.net/qwertyagency" target="_blank")
        +svgColor('behance-new')
      a.mobile-navi__icon.mobile-navi__icon--instagram(href="https://instagram.com/qwerty.agency" target="_blank")
        +svgMono('instagram')
      a.mobile-navi__icon.mobile-navi__icon--facebook(href="https://www.facebook.com/qwerty.co.llc/" target="_blank")
        +svgColor('facebook-new')
