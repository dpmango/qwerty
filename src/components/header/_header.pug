// HEADER :: START
header.header
  .container
    .header__wrapper
      a(href="homepage.html").header__logo
        +svgMono('logo')

      .header__phone
        a(href="#")
          +svgMono('phone')

      .header__right
        .header__hamburger
          .hamburger.hamburger--squeeze(js-hamburger)
            .hamburger-box
              .hamburger-inner
        .header__languages-block
          a.header__language.is-active(href="#" js-choose-language) EN
          a.header__language(href="#" js-choose-language) GE
          a.header__language(href="#" js-choose-language) RU
    
// MOBILE NAVI
.mobile-navi
  .section__bg
    img(src='img/mobile-menu.png')
  .mobile-navi__wrapper
    .mobile-navi__title
      p menu
    ul.mobile-navi__menu
      li
        a(href="homepage.html") PORTFOLIO
      li
        a(href="#") SERVICE
      li
        a(href="#") ABOUT
      li
        a(href="#") CONTACTS
      li
        a(href="#") VACANCIES
      li
        a(href="#") BLOG

    .mobile-navi__socials
      a.mobile-navi__icon.mobile-navi__icon--dribble(href="#")
        +svgMono('dribble')
      a.mobile-navi__icon.mobile-navi__icon--behance(href="#")
        +svgColor('behance-new')
      a.mobile-navi__icon.mobile-navi__icon--instagram(href="#")
        +svgMono('instagram')
      a.mobile-navi__icon.mobile-navi__icon--facebook(href="#")
        +svgColor('facebook-new')
